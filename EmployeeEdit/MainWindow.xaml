<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="Персонал" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Height="40" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Margin="1,0" Width="90" Click="Add_Click">Добавить</Button>
            <Button Margin="3,0" Width="90" Click="Edit_Click">Редактировать</Button>
            <Button Margin="1,0" Width="90">Удалить</Button>
        </StackPanel>
    </Grid>
</Window>
